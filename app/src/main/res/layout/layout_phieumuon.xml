<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã phiếu mượn:   "
                android:textSize="17dp" />
            <TextView
                android:id="@+id/maphieu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="17dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thành viên: "
                android:textSize="17dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/mathanhvienfkpm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="17dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên sách: "
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/masachfkpm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiền thuê: "
                android:textSize="17dp" />
            <TextView
                android:id="@+id/tienthue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="17dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_marginBottom="3dp">
        <TextView
            android:id="@+id/trangthai"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:textSize="20dp"
            android:layout_marginRight="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày thuê: "
                android:textSize="18dp" />
            <TextView
                android:id="@+id/ngaythue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18dp" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/suaPhieuMuon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/baseline_edit_24"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/xoaPhieuMuon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/baseline_delete_24"/>
    </LinearLayout>
</LinearLayout>